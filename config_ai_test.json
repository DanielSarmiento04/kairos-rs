{
  "version": 1,
  "jwt": {
    "secret": "your-super-secure-jwt-secret-key-must-be-at-least-32-characters-long",
    "issuer": "kairos-gateway",
    "audience": "api-clients",
    "required_claims": [
      "sub"
    ]
  },
  "ai": {
    "provider": "openai",
    "model": "gpt-4o"
  },
  "routers": [
    {
      "protocol": "http",
      "external_path": "/api/v1/smart-router",
      "internal_path": "/",
      "methods": [
        "POST"
      ],
      "auth_required": false,
      "ai_policy": {
        "enabled": true,
        "strategy": {
          "content_analysis": {
            "model": "gpt-3.5-turbo"
          }
        },
        "provider": "openai",
        "fallback_backend_index": 0
      },
      "backends": [
        {
          "host": "http://fast-responses",
          "port": 8080,
          "weight": 1
        },
        {
          "host": "http://complex-processing",
          "port": 8081,
          "weight": 1
        }
      ]
    }
  ]
}
