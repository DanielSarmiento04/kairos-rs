{
    "version": 1,
    "jwt": {
        "secret": "your-super-secure-jwt-secret-key-must-be-at-least-32-characters-long",
        "issuer": "kairos-gateway",
        "audience": "api-clients",
        "required_claims": [
            "sub",
            "exp"
        ]
    },
    "routers": [
        {
            "host": "http://localhost",
            "port": 3000,
            "external_path": "/api/identity/register/v3",
            "internal_path": "/api/identity/register",
            "methods": [
                "POST",
                "GET"
            ],
            "auth_required": false
        },
        {
            "host": "https://google.com",
            "port": 443,
            "external_path": "/identity/register/v2",
            "internal_path": "/",
            "methods": [
                "POST",
                "GET"
            ],
            "auth_required": false
        },
        {
            "host": "https://http.cat",
            "port": 443,
            "external_path": "/cats/{id}",
            "internal_path": "/{id}",
            "methods": [
                "GET"
            ],
            "auth_required": false
        },
        {
            "host": "https://http.cat",
            "port": 443,
            "external_path": "/protected/cats/{id}",
            "internal_path": "/{id}",
            "methods": [
                "GET"
            ],
            "auth_required": true
        },
        {
            "protocol": "websocket",
            "backends": [
                {
                    "host": "ws://localhost",
                    "port": 3000,
                    "weight": 1
                }
            ],
            "external_path": "/ws/chat",
            "internal_path": "/ws",
            "methods": [
                "GET"
            ],
            "auth_required": false
        }
    ]
}